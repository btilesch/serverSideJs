<!doctype html>
<html lang="en">
  <%- include("./partials/header", {meta: [{name: 'page-type', content: 'editor'}]}) -%>
  <body class="dark:bg-neutral-800">
    <%- include("./partials/topnav") -%>

    <form action="#" class="pt-60 space-y-4 relative top-1/2 left-1/4 right-1/4 w-1/2">
      <div class="flex space-x-4 items-center w-full">
        <label class="w-1/4 text-center block mb-2 text-md font-medium dark:text-gray-300" for="username">
          Username
        </label>
        <input
          class="w-3/4 rounded-lg dark:bg-gray-300 focus:border-indigo-700 focus:ring-indigo-700"
          id="username"
          name="username"
          placeholder="Username"
          required
          type="text" />
      </div>
      <div class="flex space-x-4 items-center w-full">
        <label class="w-1/4 text-center block mb-2 text-md font-medium dark:text-gray-300" for="password">
          Password
        </label>
        <input
          class="w-3/4 rounded-lg dark:bg-gray-300 focus:border-indigo-700 focus:ring-indigo-700"
          id="password"
          name="password"
          placeholder="Password"
          required
          type="password" />
      </div>
      <div class="flex space-x-4 items-center w-full">
        <div class="w-1/4"></div>
        <div class="w-3/4 flex flex-row space-x-4 items-center justify-items-start">
          <button
            class="text-white bg-indigo-600 border-2 border-indigo-600 hover:bg-indigo-800 hover:border-indigo-800 focus:ring-2 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
            type="submit">
            Login
          </button>
          <a
            class="dark:text-gray-300 border-2 border-indigo-600 hover:bg-indigo-700 hover:text-white bg-transparent focus:ring-2 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center cursor-pointer"
            href="/line">
            Cancel
          </a>
        </div>
      </div>
    </form>
  </body>
</html>

<%- include("./partials/scripts") -%>
