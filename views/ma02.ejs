<!doctype html>
<html lang="en">
<%- include("./partials/header", {meta: []}) -%>

<body class="bg-neutral-100 dark:bg-neutral-800 flex flex-col h-screen">
<%- include("./partials/topnav") -%>
<div class="flex flex-col flex-grow">
    <div class="container flex flex-grow h-full py-4">
        <div class="flex flex-row w-full">
            <div class="w-1/5 flex flex-col items-center p-4 space-y-6"><%- include("./partials/actionButtons") -%></div>
            <div
                    class="w-4/5 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 p-4 rounded-lg flex-grow h-0 min-h-full overflow-y-scroll">
                <table class="w-full dark:text-gray-300 text-md text-center overflow-y-scroll">
                    <thead>
                    <tr class="border-b-4 dark:border-neutral-500">
                        <th class="p-2">Name</th>
                        <th class="p-2">Enabled</th>
                        <th class="p-2">Creation date</th>
                        <th class="p-2">Created by</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if(typeof ma02List !== 'undefined'){ %>
                        <% ma02List?.forEach(ma02Recipe => { %>
                            <tr id="<%= ma02Recipe._id %>"
                                class="hover:bg-indigo-700 hover:bg-opacity-60 bg-opacity-60 border-b dark:border-neutral-600 cursor-pointer">
                                <td class="p-2">
                                    <a href="/ma02/<%= ma02Recipe._id %>"
                                       class="hover:underline-offset-auto hover:underline"
                                    ><%= ma02Recipe.name %></a
                                    >
                                </td>
                                <td class="p-2"><input type="checkbox" disabled="disabled"
                                                       class="rounded" <%= ma02Recipe.enabled ? 'checked' : '' %> />
                                </td>
                                <td class="p-2"><%= ma02Recipe.creationDate.toLocaleString('hu') %></td>
                                <td class="p-2"><%= ma02Recipe.username %></td>
                            </tr>
                        <% }); %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>

<%- include("./partials/scripts") -%>
