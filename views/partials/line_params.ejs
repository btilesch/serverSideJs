<div class="flex space-x-4 items-center w-full">
    <label class="w-1/4 text-left block mb-2 text-md font-medium dark:text-gray-300" for="recipe-name">
        Recipe name
    </label>
    <input
            class="w-3/4 rounded-lg dark:bg-gray-300 focus:border-indigo-700 focus:ring-indigo-700"
            id="recipe-name"
            name="recipeName"
            placeholder="Recipe name"
            required
            type="text"
            <%= disabled === true ? 'disabled' : '' %>
            value="<%= (typeof recipe === 'undefined') ? '' : recipe.name %>"/>
</div>
<div class="flex space-x-4 items-center w-full">
    <label class="w-1/4 text-left block mb-2 text-md font-medium dark:text-gray-300" for="recipe-ma01"> MA01 </label>
