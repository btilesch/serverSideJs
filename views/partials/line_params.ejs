            name="recipeMa01"
            class="w-3/4 rounded-lg dark:bg-gray-300 focus:border-indigo-700 focus:ring-indigo-700"
            required
            <%= disabled === true ? 'disabled' : '' %>>
        <option value="" selected disabled>Select</option>
        <option value="1">MA01_recipe_02</option>
        <option value="4">MA01_recipe_11</option>
    </select>
</div>
