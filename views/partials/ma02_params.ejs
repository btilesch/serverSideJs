            class="w-3/6 rounded-lg dark:bg-gray-300 focus:border-indigo-700 focus:ring-indigo-700"
            id="recipe-pressure-a"
            name="recipePressureA"
            placeholder="0"
            required
            type="number"
            <%= disabled === true ? 'disabled' : '' %>
            value="<%= (typeof recipe === 'undefined') ? '' : recipe.minTemp %>"/>
    <span class="w-1/6 text-left block mb-2 text-md font-medium dark:text-gray-300">Pa</span>
</div>

